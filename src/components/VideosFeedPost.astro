---
import HeaderPost from './shared/HeaderPost.astro'

interface AstroProps {
  name: string
  planets: string
  image: string
  race: keyof typeof raceColors
  affiliation: string
  tags: string[]
  publicacion: string
  videoFeed: string
}

const { name, planets, image, race, affiliation, tags, publicacion, videoFeed } = Astro.props as AstroProps

const raceColors = {
  Human: 'bg-gradient-to-r from-sky-400 to-cyan-300',
  Saiyan: 'bg-gradient-to-r from-yellow-100 via-yellow-300 to-yellow-500',
  Namekian: 'bg-gradient-to-r from-green-200 via-green-400 to-purple-700',
  Majin: 'bg-gradient-to-r from-pink-400 to-pink-600',
  'Frieza Race': 'bg-gradient-to-r from-purple-200 via-purple-400 to-purple-800',
  Android: 'bg-[radial-gradient(ellipse_at_right,_var(--tw-gradient-stops))] from-sky-400 to-indigo-900',
  'Jiren Race': 'bg-gradient-to-tr from-violet-500 to-orange-300',
  'God Angel': 'bg-teal-500',
  Evil: 'bg-black',
  Nucleico:
    'bg-[radial-gradient(ellipse_at_bottom,_var(--tw-gradient-stops))] from-amber-200 via-violet-600 to-sky-900',
  'Nucleico benigno':
    'bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-gray-300 via-fuchsia-600 to-orange-600',
  Unknown: 'bg-gradient-to-r from-teal-200 to-lime-200'
}
---

<article class='bg-white rounded-xl flex mx-auto lg:max-w-3xl xl:max-w-4xl w-full flex-col gap-2'>
  <HeaderPost name={name} planets={planets} image={image} race={race} affiliation={affiliation} />
  <main class='flex flex-col gap-2'>
    <p class='mx-4'>{publicacion}</p>
    <ul class='flex flex-wrap gap-2 font-light mx-4'>
      {tags.map((tag: string) => <li>{tag}</li>)}
    </ul>
    <video width='100%' controls muted autoplay transition:persist>
      <source src={videoFeed} type='video/mp4' />
      Tu navegador no soporta HTML5 video.
    </video>

    <footer class='flex justify-between items-center text-sm font-light gap-2 mx-4 pb-4'>
      <div class='flex'>
        <span class='size-8 flex items-center justify-center rounded-full z-[6] bg-white'
          ><strong class='text-xl'>👍🏻</strong></span
        >
        <span class='size-8 flex items-center justify-center rounded-full z-[5] -ml-3 bg-white'
          ><strong class='text-xl'>❤️</strong></span
        >
        <span class='size-8 flex items-center justify-center rounded-full z-[4] -ml-3 bg-white'
          ><strong class='text-xl'>😍</strong></span
        >
        <span class='size-8 flex items-center justify-center rounded-full z-[3] -ml-3 bg-white'
          ><strong class='text-xl'>😂</strong></span
        >
        <span class='size-8 flex items-center justify-center rounded-full z-[2] -ml-3 bg-white'
          ><strong class='text-xl'>😮</strong></span
        >
        <span class='size-8 flex items-center justify-center rounded-full z-[1] -ml-3 bg-white'
          ><strong class='text-xl'>😭</strong></span
        >
        <span class='size-8 flex items-center justify-center rounded-full z-[0] -ml-3 bg-white'
          ><strong class='text-xl'>😡</strong></span
        >
      </div>
      <span class='flex-1'>Cell, Piccolo, Goku y 24 personas más</span>
      <span>1 comentario</span>
    </footer>
  </main>
</article>
